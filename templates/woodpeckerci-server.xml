<?xml version="1.0"?>
<Container version="2">
  <Name>woodpeckerci-server</Name>
  <Repository>woodpeckerci/woodpecker-server:latest</Repository>
  <Registry>https://hub.docker.com/r/woodpeckerci/woodpecker-server/</Registry>
  <Category>Productivity: Tools:</Category>
  <Privileged>false</Privileged>
  <Network>bridge</Network>
  <Support>https://woodpecker-ci.org/docs/intro</Support>
  <Project>https://github.com/woodpecker-ci/woodpecker</Project>
  <Overview>Woodpecker is a simple CI engine with great extensibility. It runs your pipelines inside Docker containers, so if you are already using them in your daily workflow, you'll love Woodpecker for sure. [/b] AppSupport: https://discord.gg/ATCM64M</Overview>
  <WebUI>http://[IP]:[PORT:8000]</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/xBerzerkr/unraid-templates/master/templates/woodpeckerci-server.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/xBerzerkr/unraid-templates/master/templates/img/woodpeckerci.png</Icon>
  <Config Name="Host" Target="WOODPECKER_HOST" Default="woodpecker.example.com" Mode="" Description="Container Variable: WOODPECKER_HOST" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Web UI" Target="8000" Default="8000" Mode="tcp" Description="Web UI Port: 8000" Type="Port" Display="always" Required="false" Mask="false">8000</Config>
  <Config Name="Enable Woodpecker GitHub" Target="WOODPECKER_GITHUB" Default="true" Mode="" Description="Container Variable: WOODPECKER_GITHUB" Type="Variable" Display="always" Required="true" Mask="false">true</Config>
  <Config Name="Woodpecker GitHub Client ID" Target="WOODPECKER_GITHUB_CLIENT" Default="" Mode="" Description="Container Variable: WOODPECKER_GITHUB_CLIENT" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Woodpecker GitHub Secret" Target="WOODPECKER_GITHUB_SECRET" Default="" Mode="" Description="Container Variable: WOODPECKER_GITHUB_SECRET" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Woodpecker Agent Shared Secret" Target="WOODPECKER_AGENT_SECRET" Default="" Mode="" Description="Container Variable: WOODPECKER_AGENT_SECRET" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Data directory" Target="/data" Default="/mnt/user/appdata/woodpeckerci-server" Mode="rw" Description="Container Path: /data" Type="Path" Display="always" Required="true" Mask="false"/>
  <ExtraParams>--restart=unless-stopped</ExtraParams>
</Container>
